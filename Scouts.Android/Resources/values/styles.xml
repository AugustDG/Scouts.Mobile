<?xml version="1.0" encoding="utf-8" ?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

  <style name="MainTheme" parent="MainTheme.BaseDark">
  </style>
  <!-- Base theme applied no matter what API -->
  <style name="MainTheme.BaseLight" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="android:fitsSystemWindows">false</item>
    <!--If you are using revision 22.1 please use just windowNoTitle. Without android:-->
    <item name="windowNoTitle">true</item>
    <!--We will be using the toolbar so no need to show ActionBar-->
    <item name="windowActionBar">true</item>
    <!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette -->
    <!-- colorPrimary is used for the default action bar background -->
    <item name="colorPrimary">#DADADA</item>
    <!-- colorPrimaryDark is used for the status bar -->
    <item name="colorPrimaryDark">#9A9A9A</item>
    <!-- colorAccent is used as the default value for colorControlActivated
         which is used to tint widgets -->
    <item name="colorAccent">#399E18</item>
    <!-- You can also set colorControlNormal, colorControlActivated
         colorControlHighlight and colorSwitchThumbNormal. -->
    <item name="windowActionModeOverlay">true</item>
    
    <item name="android:datePickerDialogTheme">@style/AppCompatDialogStyle</item>

  </style>
  <style name="MainTheme.BaseDark" parent="Theme.AppCompat">
    <item name="android:fitsSystemWindows">false</item>
    <!--If you are using revision 22.1 please use just windowNoTitle. Without android:-->
    <item name="windowNoTitle">true</item>
    <!--We will be using the toolbar so no need to show ActionBar-->
    <item name="windowActionBar">false</item>
    <!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette -->
    <!-- colorPrimary is used for the default action bar background -->
    <item name="colorPrimary">#1A1A1A</item>
    <!-- colorPrimaryDark is used for the status bar -->
    <item name="colorPrimaryDark">#252525</item>
    <!-- colorAccent is used as the default value for colorControlActivated
         which is used to tint widgets -->
    <item name="colorAccent">#399E18</item>
    <!-- You can also set colorControlNormal, colorControlActivated
         colorControlHighlight and colorSwitchThumbNormal. -->
    <item name="windowActionModeOverlay">true</item>

    <item name="android:datePickerDialogTheme">@style/AppCompatDialogStyle</item>

  </style>
  <style name="AppCompatDialogStyle" parent="android:Theme.Material.Dialog">
    <item name="android:colorAccent">#399E18</item>
  </style>
  <style name="splashScreen" parent="android:Theme.Material.NoActionBar">
    <item name="android:fitsSystemWindows">true</item>
    <item name="android:colorPrimaryDark">#1A1A1A</item>
    <item name="android:windowBackground">@drawable/splash_screen</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowIsTranslucent">false</item>
    <item name="android:windowIsFloating">false</item>
    <item name="android:backgroundDimEnabled">true</item>
  </style>
</resources>
